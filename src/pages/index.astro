    <!-- Basic glitch animation (custom, since Tailwind doesn't have it built-in) -->
    <style>
      .glitch {
        animation: glitch 2s infinite;
        text-shadow: 
          0.05em 0 0 var(--color-electric-purple),
          -0.03em -0.04em 0 var(--color-blood-red),
          0.025em 0.04em 0 var(--color-blood-red);
      }
      @keyframes glitch {
        0% { text-shadow: 0.05em 0 0 var(--color-electric-purple), -0.03em -0.04em 0 var(--color-blood-red); }
        14% { text-shadow: 0.05em 0 0 var(--color-electric-purple), -0.03em -0.04em 0 var(--color-blood-red); }
        15% { text-shadow: -0.05em 0 0 var(--color-blood-red), 0.03em 0.04em 0 var(--color-electric-purple); }
        49% { text-shadow: -0.05em 0 0 var(--color-blood-red), 0.03em 0.04em 0 var(--color-electric-purple); }
        50% { text-shadow: 0.05em 0 0 var(--color-neon-green), -0.03em -0.04em 0 var(--color-electric-purple); }
        99% { text-shadow: 0.05em 0 0 var(--color-neon-green), -0.03em -0.04em 0 var(--color-electric-purple); }
        100% { text-shadow: 0.05em 0 0 var(--color-electric-purple), -0.03em -0.04em 0 var(--color-blood-red); }
      }
    </style>
