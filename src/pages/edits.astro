---
import MainLayout from '../layouts/MainLayout.astro';
import SoundEffects from '../components/SoundEffects.astro';
---

<MainLayout title="Edits Gallery – Before & After murder/rebirth">
  <section class="min-h-screen py-32 px-6 bg-black">
    <h1 class="text-7xl md:text-10xl font-black text-center text-transparent bg-clip-text bg-gradient-to-r from-neonGreen via-electricPurple to-bloodRed glitch-hero">
      EDITS GALLERY
    </h1>

    <p class="text-3xl text-center mt-8 mb-16 max-w-4xl mx-auto">
      Hover or tap to see the murder → rebirth transformation.<br />
      Want yours savage'd? Chat the beast now.
    </p>

    <!-- Masonry grid with before/after hover -->
    <div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6 max-w-7xl mx-auto">
      <!-- Example pair 1 -->
      <div class="break-inside-avoid rounded-2xl overflow-hidden border-2 border-electricPurple/40 hover:border-bloodRed transition-all duration-500 shadow-purple-glow hover:shadow-red-glow group relative">
        <img 
          src="/edits/before-after/before1.jpg" 
          alt="Before edit" 
          class="w-full h-auto object-cover transition-all duration-700 group-hover:opacity-0"
        />
        <img 
          src="/edits/before-after/after1.jpg" 
          alt="After savage edit" 
          class="absolute inset-0 w-full h-full object-cover opacity-0 group-hover:opacity-100 transition-all duration-700"
        />
        <div class="absolute bottom-0 left-0 right-0 bg-black/70 p-4 text-center text-neonGreen font-bold text-lg">
          @creatorhandle – profile pic rebirth
        </div>
      </div>

      <!-- Example pair 2 -->
      <div class="break-inside-avoid rounded-2xl overflow-hidden border-2 border-electricPurple/40 hover:border-bloodRed transition-all duration-500 shadow-purple-glow hover:shadow-red-glow group relative">
        <img 
          src="/edits/before-after/before2.jpg" 
          alt="Before edit" 
          class="w-full h-auto object-cover transition-all duration-700 group-hover:opacity-0"
        />
        <img 
          src="/edits/before-after/after2.jpg" 
          alt="After savage edit" 
          class="absolute inset-0 w-full h-full object-cover opacity-0 group-hover:opacity-100 transition-all duration-700"
        />
        <div class="absolute bottom-0 left-0 right-0 bg-black/70 p-4 text-center text-neonGreen font-bold text-lg">
          @anothercreator – reel thumbnail murder
        </div>
      </div>

      <!-- Repeat for each pair you have -->
      <!-- Add more <div> blocks here with your file names -->
    </div>

    <!-- Big CTA at bottom -->
    <div class="text-center mt-24">
      <a 
        href="https://wa.me/256752881573?text=Yo%20beast%2C%20murder%20and%20rebirth%20my%20pics"
        class="inline-block px-16 py-8 bg-neonGreen text-black font-black text-3xl rounded-full hover:bg-electricPurple hover:text-white transition-all shadow-neon-glow hover:shadow-purple-glow"
      >
        Get your pics murdered & reborn
      </a>
    </div>
  </section>

  <SoundEffects />
</MainLayout>
